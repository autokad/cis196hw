<h3>Listing users</h3>
 
<table class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
    <th>Title</th>
	<th>Hours</th>
    <th>Text</th>
	<th>User</th>
	<th>Edit</th>
	<th>Exterminate</th>
  </tr>
 </thead>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.fname %></td>
	  <td><%= user.hours %></td>
      <td><%= user.lname %></td>
	  <td><%= link_to user.username, user %></td>
	  <td><%= link_to "edit", edit_user_path(user.id) %></td>
	  <td><%= link_to "delete", user, method: :delete, :confirm => 'Are you sure?' %></td>
	  
    </tr>
  <% end %>
</table>