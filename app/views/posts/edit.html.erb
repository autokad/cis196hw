<div class="container">
<h1>Edit Post</h1>
<% if @post.errors.any? %>
	<div class="alert alert-error"> 
		<a class="close" data-dismiss="alert">x</a> 
		<% @post.errors.full_messages.each do |msg|  %>
			<li><%= msg %></li>
			<%end%>
	</div>
<% end%>
<%= form_for(@post) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
     <%= f.submit "Done!", class: "btn btn-primary" %>
  </p>
<% end %>
</div>