<h3>Listing posts</h3>
 
<table class="table table-striped table-bordered table-condensed">
<thead>
  <tr>
    <th>Title</th>
	th>Hours</th>
    <th>Text</th>
	<th>User</th>
	<th>Edit</th>
	<th>Exterminate</th>
  </tr>
 </thead>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post %></td>
	  <td><%= post.hours %></td>
      <td><%= post.text %></td>
	  <td><%= link_to post.user.username, post.user %></td>
	  <td><%= link_to "edit", edit_post_path(post.id) %></td>
	  <td><%= link_to "delete", post, method: :delete %></td>
	  
    </tr>
  <% end %>
</table>